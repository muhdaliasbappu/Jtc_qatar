<style>
  /* Base styles */
  tr {
    page-break-inside: avoid;
  }
  table {
    border-collapse: collapse;
    width: 100%;
  }
  th, td {
    padding: 4px;
    text-align: left;
    border: 1px solid #ddd;
    font-size: 10px;
  }
  .table-heading {
    font-size: 18px;
    font-weight: bold;
    padding: 10px 0;
  }
  th.total-salary {
    width: 15%;
  }
  .date {
    font-size: 13px;
    margin-bottom: 20px;
    text-align: left;
    border-bottom: 2px solid #000;
  }

  /* Print styles */
  @media print {
    @page {
      /* A4 landscape, small margins */
      size: A4 landscape;
      margin: 10mm;
    }
    /* Fixed header always at top */
    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      /* Must match or exceed the total height of your logo + heading + date */
      height: 140px; 
      z-index: 9999;
      /* Optional white background so text or images behind it don't show through */
      background: #fff;
    }
    /* Push the content below the fixed header */
    .content {
      margin-top: 150px; /* Must be >= header height */
    }
  }
</style>

<!-- Header (repeated on each page) -->
<header>
  <div style="display: flex; align-items: center; justify-content: space-between; padding: 10px;">
    <!-- Left Logo -->
    <div class="left-logo">
      <img src="https://jtcqatar.tickrplus.com/assets/images/logo-white.png"
           style="height:130px; width:auto;">
    </div>
    <!-- Center Heading -->
    <div class="table-heading" style="flex-grow: 1; text-align: center;">
      SALARY STATEMENT | MONTH OF {{employeereport.date}}
    </div>
    <!-- Right Logo -->
    <div class="right-logo">
      <img src="https://jtcqatar.tickrplus.com/assets/images/logo-right.png"
           style="height:130px; width:auto;">
    </div>
  </div>
  <div class="date" style="padding: 0 10px;">
    Type: {{employeereport.employeeType}}<br>
    Generated On: {{employeereport.currentDate}}
  </div>
</header>

