<main class="text-center" style="width: 100%; max-width: 330px; padding: 15px; margin: auto;">
    <form method="post">

        <h1 class=" h3 mb-3 fw-normal">Admin sign in</h1>


        <div class="form-floating mt-5">
            <input type="username" name="username" class=" form-control" id="floatingInput" placeholder="Username">
            <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating mt-3">
            <input type="password" name="password" class=" form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
     
        <button class="mt-4 w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    
        <p class="mt-5 mb-3 text-muted">© 2023–2024</p>
    </form>
    <a href="/" class="mt-5 mb-3 text-muted">User Profile</a>
</main>