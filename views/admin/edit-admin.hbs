<main class="text-center" style="width: 100%; max-width: 330px; padding: 15px; margin: auto;">
    <form method="post" action="/admin/edit-admin/{{sadmin._id}}">

        <h1 class=" h3 mb-3 fw-normal">Edit Admin</h1>
        <div class="form-floating">
            <input type="username" value="{{sadmin.username}}" name="username" class=" form-control" id="floatingInput"
                placeholder="New User-0--name">
            <label for=" floatingInput">New Username</label>
        </div>
        <div class="form-floating mt-3">
            <input type="password" value="{{sadmin.password}}" name="password" class=" form-control"
                id="floatingPassword" placeholder="New Password">
            <label for=" floatingInput">New Password</label>
        </div>
        <button type="submit" class="mt-4 w-90 btn btn-success">Confirm</button>


    </form>
</main>