<div class="container" style="margin-top: 50px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-header" style="background-color: #3c837b; color: #fff; border-top-left-radius: 10px; border-top-right-radius: 10px; text-align: center; padding: 15px; font-family: 'Helvetica Neue', sans-serif;">
                    <h2 style="margin: 0;">Search Timesheet</h2>
                </div>
                <div class="card-body" style="padding: 20px;">
                    <form id="employeeForm" action="/admin/datasheet" method="POST">
                        <div class="form-group" style="margin-bottom: 20px;">
                            <label for="searchdate" style="font-weight: bold;">Select Date:</label>
                            <input type="date" id="searchdate" name="searchdate" class="form-control">
                        </div>
                        <button type="submit" id="submits" class="btn btn-success btn-block" style="background-color: #3c837b; border: none; color: #fff; font-family: 'Helvetica Neue', sans-serif;">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
