 <div class="content-page">
        <div class="content">
            <!-- Start Content-->
            <div class="container-fluid">

                <!-- Title Row -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <h4 class="page-title">Dashboard</h4>
                        </div>
                    </div>
                </div>

                <!-- Content Row -->
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-xxl-3">
                        <div class="row">
                            <!-- Card 1: Active Employees -->
                            <div class="col-md-3 col-xxl-12">
                                <div class="card tilebox-one">
                                    <div class="card-body">
                                        <i class='uil uil-users-alt float-end'></i>
                                        <h6 class="text-uppercase mt-0">Active Employees</h6>
                                        <h2 class="my-2" id="active-employees-count">{{counts.workingemployees}}</h2>
                                        <p class="mb-0 text-muted">
                                            <span class="text-success me-2">
                                                <span class="mdi mdi-arrow-up-bold"></span> 5.27%
                                            </span>
                                            <span class="text-nowrap">Since last month</span>
                                        </p>
                                    </div>
                                    <!-- end card-body-->
                                </div>
                            </div>
                            <!-- End Card 1 -->

                            <!-- Card 3: Active Projects -->
                            <div class="col-md-3 col-xxl-12">
                                <div class="card tilebox-one">
                                    <div class="card-body">
                                        <i class='mdi mdi-briefcase-outline float-end'></i>
                                        <h6 class="text-uppercase mt-0">Active Projects</h6>
                                        <h2 class="my-2" id="active-projects-count">{{counts.activeProjects}}</h2>
                                        <p class="mb-0 text-muted">
                                            <span class="text-success me-2">
                                                <span class="mdi mdi-arrow-up-bold"></span> 5.27%
                                            </span>
                                            <span class="text-nowrap">Since last month</span>
                                        </p>
                                    </div>
                                    <!-- end card-body-->
                                </div>
                            </div>
                            <!-- End Card 3 -->

                            <!-- Card 2: Donut Chart -->
                            <div class="col-md-6 col-xxl-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title mb-4">Employee Demographics</h4>
                                        <div dir="ltr">
                                            <div id="update-donut" class="apex-charts" data-colors="#727cf5,#6c757d,#0acf97,#fa5c7c"></div>
                                        </div>
                                    </div>
                                    <!-- end card-body-->
                                </div>
                                <!-- end card -->
                            </div>
                            <!-- End Card 2 -->
                        </div>
                    </div>
                    <!-- End Left Column -->

                    <!-- Right Column -->
                    <div class="col-xxl-9">
                        <!-- Card: Project Cost Overview with Dropdown -->
                        <div class="card">
                            <div class="card-body">
                                <!-- Card Header -->
                                <div class="d-flex card-header justify-content-between align-items-center">
                                    <h5 class="header-title">Project Cost Overview</h5>

                                    <!-- Dropdown Menu for Additional Options -->
                                    <div class="dropdown">
                                        <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="mdi mdi-dots-vertical"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a href="#currentMonth" data-bs-toggle="pill" aria-expanded="false" class="dropdown-item">This Month</a>
                                            <a href="#lastMonth" data-bs-toggle="pill" aria-expanded="false" class="dropdown-item">Last Month</a>
                                            <a href="#lastSixMonths" data-bs-toggle="pill" aria-expanded="false" class="dropdown-item">Last 6 Months</a>
                                            <a href="#lastYear" data-bs-toggle="pill" aria-expanded="false" class="dropdown-item">Last Year</a>
                                            <a href="#overall" data-bs-toggle="pill" aria-expanded="false" class="dropdown-item">Overall</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Card Header -->

                                <!-- Tab Content -->
                                <div class="tab-content" id="pills-tabContent">
                                    <!-- Tab Pane: Current Month -->
                                    <div class="tab-pane fade show active" id="currentMonth" role="tabpanel" aria-labelledby="pills-first-tab">
                                        <div dir="ltr">
                                            <div id="projectCost-chart" class="apex-charts" data-colors="#727cf5,#0acf97,#fa5c7c,#6c757d,#39afd1,#ffbc00,#ff6b6b"></div>
                                        </div>
                                    </div>
                                    <!-- Add more tab panes as needed -->
                                </div>
                                <!-- End Tab Content -->
                            </div>
                            <!-- end card-body-->
                        </div>
                        <!-- end Project Cost Overview card -->

                        <!-- Card: Project Performance with Line Chart -->
                        
                        <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="header-title mb-0">Project Performance</h5>
                                        <div>
                                            <select id="projectSelect" class="form-select form-select-sm">
                                                {{#each projectNames}}
                                                   <option value="{{this.value}}" {{#if (eq this.value "one")}}selected{{/if}}>{{this.projectName}}</option>
                                                {{/each}}
                                        </select>
                                        </div>
                                    </div>

                                    <div class="card-body pt-0">
                                        <div dir="ltr">
                                            <div id="revenue-statistics-chart" class="apex-charts" ></div>
                                        </div>
                                    </div>
                                </div>

                        <!-- end Project Performance card -->
                    </div>
                    <!-- End Right Column -->
                </div>
                <!-- End Content Row -->

            </div>
            <!-- end container-fluid -->
        </div>
        <!-- end content -->
    </div>
    <!-- end content-page -->

    <!-- JavaScript Variables -->
    <script>
        var reportData = {
            categories: {{{ json categories }}},
            data: {{{ json data }}}
        };

        var projectbar = {{{ json projectbar }}};
